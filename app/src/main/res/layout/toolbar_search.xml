<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:background="@color/colorMainGray"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

    <com.example.andy.connectutil.View.ClearEditText
        android:paddingRight="10dp"
        android:id="@+id/toolbar_et_search"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:background="@drawable/shape_toolbar_edittext"
        android:layout_weight="8"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
    <ImageButton
        android:id="@+id/toolbar_ibtn_search"
        android:background="@color/colorMainGray"
        android:src="@drawable/toolbar_seatch_white"
        android:scaleType="fitCenter"
        android:padding="10dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />

    <ImageButton
        android:layout_marginRight="10dp"
        android:id="@+id/toolbar_menu"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorMainGray"
        android:padding="7dp"
        android:scaleType="fitCenter"
        android:src="@drawable/toolbar_menu_white" />

</LinearLayout>

   <include layout="@layout/layout_divider"/>

</LinearLayout>