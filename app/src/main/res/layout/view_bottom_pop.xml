<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_bottom_popview"
    android:layout_width="match_parent"
    android:layout_height="500dp">

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="45dp">

    <ImageButton

        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/down_addgray"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="350dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pop_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


</LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <ImageButton
            android:id="@+id/bottom_add_ibtn"
            style="@style/ibtn_icon_size_stytle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/bottom_setting"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/icon_add" />

        <ImageButton
            android:id="@+id/bottom_setting"
            style="@style/ibtn_icon_size_stytle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/setting" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_gravity="bottom"
        android:id="@+id/rl_bottom_addequit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="0.5"
      >

        <ImageButton
            android:padding="15dp"
            style="@style/ibtn_icon_size_stytle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/icon_up_black"
            android:id="@+id/imageButton" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add equipment"
            android:textColor="#fff" />


        <ImageButton
            android:padding="15dp"
            style="@style/ibtn_icon_size_stytle"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_up_black"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>




</LinearLayout>