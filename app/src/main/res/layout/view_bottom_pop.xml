<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:background="@drawable/shape_bottom_popview"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="vertical"
        >

        <ImageButton
            android:id="@+id/bottom_view_top_ibtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/down_addgray" />
<View
    android:layout_gravity="bottom"
    android:background="@drawable/shape_helprecycleview_divider"
    android:layout_width="match_parent"
    android:layout_height="2dp"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="320dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pop_recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">

        <ImageButton
            android:id="@+id/bottom_add_ibtn"
            style="@style/ibtn_icon_size_stytle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/bottom_setting"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/icon_add" />

        <ImageButton
            android:id="@+id/bottom_setting"
            style="@style/ibtn_icon_size_stytle"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/setting" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom_addequit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="0.5">

        <ImageButton
            android:id="@+id/imageButton"
            style="@style/ibtn_icon_size_stytle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:padding="15dp"
            android:src="@drawable/icon_up_black" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add equipment"
            android:textColor="#fff"
            android:textSize="16sp" />


        <ImageButton
            style="@style/ibtn_icon_size_stytle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:padding="15dp"
            android:src="@drawable/icon_up_black" />


    </RelativeLayout>


</LinearLayout>