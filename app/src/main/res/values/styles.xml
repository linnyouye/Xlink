<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    //控制页面的按钮样式
    <style name="controlbtn_top_style">
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background" >@drawable/shape_top_tvshow</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="TitleBar">
        <item name="android:id">@id/title_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_title_bar</item>
    </style>
    <style name="TitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">70dp</item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#eeeeff</item>
        <item name="android:gravity">center</item>
        <item name="android:id">@id/title_text</item>
        <item name="android:background">@drawable/bg_title_bar</item>
    </style>









    <style name="TitleBackBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/btn_back_text</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableLeft">@drawable/ic_back</item>
        <item name="android:id">@id/btnBack</item>
    </style>
    <style name="TitleActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/btn_back_text</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
    </style>
    <!--选择设备列表的按钮样式-->

    <style name="btn_selectequitment_stytle">
        <item name="android:background">@drawable/selector_select_ibtn</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="ibtn_size_stytle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>
    <!--顶层四个imagebutton样式-->
    <style name="popview_ibtn_style">
        <item name="android:background">#2000</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <!--第四个下拉菜单（选择时间）样式-->
    <style name="popview_btn4_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>







    <!--注册内容的style-->
    <style name="ListItemText1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/list_item_text1</item>
        <item name="android:textSize">@dimen/list_item_text1</item>
    </style>

    <style name="ListItemText2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/list_item_text2</item>
        <item name="android:textSize">@dimen/list_item_text2</item>
    </style>

    <style name="InputItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/linear_item_height</item>
        <item name="android:background">@drawable/bg_horizontal_rg</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/block_divider_height</item>
    </style>

    <style name="InputIcon">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">10dp</item>

    </style>

    <style name="LinearInputText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/linear_item_height</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">#aaaaaa</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/item_title_text</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BigButton">
        <item name="android:minHeight">@dimen/linear_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fff</item>

        <item name="android:layout_marginBottom">@dimen/block_divider_height</item>
    </style>

    <style name="LinklikeButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/block_divider_height</item>
        <item name="android:paddingLeft">@dimen/ele_padding</item>
        <item name="android:paddingRight">@dimen/ele_padding</item>
        <item name="android:textSize">@dimen/link_button_text</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/link_like_btn</item>
    </style>

    <style name="VerticalLinearBlock">
        <item name="android:minHeight">@dimen/linear_item_height</item>
        <item name="android:divider">@drawable/linearlayout_divider</item>
        <item name="android:showDividers">middle</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_block</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/block_divider_height</item>
    </style>


    <style name="ScrollViewContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/block_divider_height</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearItem">
        <item name="android:background">@drawable/linear_item_bg_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:minHeight">@dimen/linear_item_height</item>
    </style>

    <style name="led_btn_stytle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#343f45</item>
    </style>

</resources>
